
@{
    ViewBag.Title = "View";
}

<div id="titulo"><h2>Chat</h2></div>
<div class="container col-lg-12">

    <input type="hidden" id="displayname" />

    <div class="row area-texto">
        <textarea class="col-lg-12" type="text" id="message"> </textarea>
    </div>
    <div class="row btn-enviar"><input type="button" class="btn btn-info" id="sendmessage" value="Enviar" /></div>

    <div class="row list-msg">

        <ul id="striped-list"></ul>
    </div>


</div>


@section scripts {


    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>

    <!--SignalR script to update the chat page and send messages.-->
    <script>


        $(function () {
           // Reference the auto-generated proxy for the hub.
            var chat = $.connection.chatHub;
            // Create a function that the hub can call back to display messages.

            chat.client.addNewMessageToPage = function (name, message, hora) {
                // Add the message to the page.

                $('#striped-list').append('<li><strong>' + htmlEncode(name)
                    + '</strong>: ' + htmlEncode(message) + '<span id="horariomsg">' + htmlEncode(hora) + '</span>' + '</li>');

                $('#striped-list').animate({ scrollTop: $('#striped-list').prop("scrollHeight") }, 500);
            };

            // Get the user name and store it to prepend to messages.
            $('#displayname').val(prompt('Enter your name:', ''));
            // Set initial focus to message input box.
            $('#message').focus();

            // Start the connection.
            $.connection.hub.start().done(function () {
                $('#sendmessage').click(function () {

                    // Call the Send method in ChatHub class
                    //Call the Hub class the was inherited.
                    var today = new Date();
                    var h = addZero(today.getHours());
                    var min = addZero(today.getMinutes());
                    var timemsg = h + ":" + min;

                    chat.server.send($('#displayname').val(), $('#message').val(), timemsg);
                    // Clear text box and reset focus for next comment.
                    $('#message').val('').focus();

                });
                document.addEventListener("keypress", function (event) {
                    if (event.keyCode == 13) {

                        console.log($(".list-msg")[0].scrollHeight)
